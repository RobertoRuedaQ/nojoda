<div class="card">
  <div class="card-body p-0">

    <% if application.status == 'active' %>
      <div class="text-center my-3"><h4 class="my-4 text-primary"><%= I18n.t('application.submit_your_application') %></h4></div>
      <p class="mx-5"><%= I18n.t('application.submit_application_test') %></p>

      <div class="text-center my-5">
        <%= link_to I18n.t('application.submit_your_application'),submit_application_application_path(application), class: 'btn btn-primary' %>
      </div>
    <% else %>
      <div class="text-center my-3">
        <h4 class="my-4 text-success"><%= I18n.t('application.submit_your_application') %></h4>
      </div>
      <p class="mx-5 text-center"><%= I18n.t('origination.success_apply') %></p>
      <div class="row">
        <div class="col text-center" style="padding: 1rem;font-size: 40px">
          <i class="fas fa-check-circle text-success"></i>
        </div>
      </div>
      <div class="text-center">
        <%= link_to(I18n.t('general.back_home'), root_path, class: 'btn btn-success my-3') %>
      </div>

    <% end %>

  </div>
</div>