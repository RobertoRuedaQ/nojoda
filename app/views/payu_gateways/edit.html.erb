

<div class="d-flex justify-content-between">
	<%= form_title(@payu_gateway, 'name') %> 
	<div class="align-self-center">
		<% if @payu_gateway.success? %>
			<i class="fas fa-check-circle text-success display-4"></i>
		<% else %>
			<div class="d-flex">
				<h5 class="my-2 mr-3"><%= @payu_gateway.error_message %></h5>
				<i class="fas fa-check-circle text-danger display-4"></i>
			</div>
		<% end %>
	</div>
</div>
<%= build_form(@payu_gateway,'update',current_user.template('PayuGateway','payu_gateways',current_user),html: { class: 'form-group', method: 'put'}) %>

