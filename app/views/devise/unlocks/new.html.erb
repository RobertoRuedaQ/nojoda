  <!-- Page -->
  <%= stylesheet_link_tag 'pages/authentication.css', media: 'all' %>

<!--
=================================================================
**************************** CONTENT ****************************
-->

<div class="authentication-wrapper authentication-4 px-4">
  <div class="authentication-inner py-5">

    <!-- Form -->
	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post , class: "card"}) do |f| %>

      <div class="p-6 p-sm-5">

    <%= devise_error_messages! %>

        <h5 class="text-center text-muted font-weight-normal mb-4"><%= t('.resend_unlock_instructions') %></h5>

        <hr class="mt-0 mb-4">
        <div class="form-group">


		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>




        </div>


      <div class="actions">
    <%= f.submit t('.resend_unlock_instructions'), class: 'btn btn-primary btn-block' %>
      </div>

      <div class="py-5">
    <%= render "devise/shared/links" %>
      </div>


      </div>
    <% end %>
    <!-- / Form -->

  </div>
</div>

