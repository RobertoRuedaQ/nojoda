<div class="card mt-2">
  <div class="card-header d-flex flex-column p-0" id="heading-manual-payment">
    <%= button_tag class: 'btn btn-primary', data: {target: '#collapse-manual-payment', toggle: 'collapse'}, aria: {expanded: 'true', controls: 'collapse-manual-payment'} do %>
      <span class="fas fa-cloud-upload-alt"></span><span class="ml-3"><%= I18n.t('billing_document.upload_payment_support') %></span>
    <% end %>
  </div>
  <div id="collapse-manual-payment" class="collapse" aria-labelledby="heading-manual-payment" data-parent="#accordion-payment">
    <div class="card-body">
      <div class="text-center my-5">
        <% if !billing_document.payment.find_by_status('under_review').nil? && 
          !billing_document.payment.find_by_status('under_review').application.find_by_status('submitted').nil? %>
          <div class="card">
            <div class="card-body bg-success text-white">
              <%= I18n.t('application.request_payment_submitted') %>
            </div>
          </div>
        <% else %>
          <%= button_to 'Subir Soporte De Pago', manual_payment_application_payment_path(billing_document), class: 'btn  btn-primary' %>
        <% end %>
      </div>

    </div>
  </div>
</div>

