<div class="row">
	<div class="col-md-4">
		<%= image_tag(asset_path("lumni_logo.png"), height: 30, class: 'mx-2 mt-2 mb-2') %>
	</div>
	<div class="col-md-4 text-center">
		<h5 class="text-primary my-3"><%= @questionnaire.name %></h5>
	</div>


	<div class="col-md-4 my-1 text-right">
		
		<% if current_user.staff? %>
			<% case @user_questionnaire.application.resource_type %>
			<% when 'FundingOpportunity' %>
				<% target_path = edit_applicant_path(@user_questionnaire.user_id) %>
			<% else %>
				<% target_path = edit_student_path(@user_questionnaire.user_id) %>
			<% end %>


			<h6 class="mb-1"><%= link_to @user_questionnaire.user.name, target_path, class: 'text-primary' %></h6> 
			<%= eval("#{@user_questionnaire.resource_type}.model_name.human(count: 1)") %>
		<% end %>


		
	</div>


	<!-- 	<%= button_to I18n.t('general.cancel'),cancel_test_user_questionnaire_path(@user_questionnaire), class: 'btn btn-danger my-2' %>
	 -->

</div>
<hr class="border-light m-0">