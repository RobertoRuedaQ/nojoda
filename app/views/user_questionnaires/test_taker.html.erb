<div class="layout-wrapper layout-1">
  <div class="layout-inner">
    <div class="layout-container">
      <div class="layout-content">
        <div class="container-fluid flex-grow-1 ">

          <%= render('layouts/messages.html.erb') %>
          <%= render 'user_questionnaires/partial/taker_header' %>
          <% case  @user_questionnaire.status%>
					<% when'pending' %>
						<%= render 'user_questionnaires/partial/pending_questionnaire' %>
					<% when 'ongoing','finished','submitted' %>
						<%= render 'user_questionnaires/partial/ongoing_questionnaire' %>
					<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
