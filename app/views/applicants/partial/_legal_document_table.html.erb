<div class="card">
	<div class="card-body py-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= I18n.t('general.id') %></th>
          <th><%= I18n.t('general.name') %></th>
          <th><%= I18n.t('general.status') %></th>
          <th><%= I18n.t('general.document_type') %></th>
          <th><%= I18n.t('general.validation_method') %></th>
          <th><%= I18n.t('general.created_at')%></th>
          <th><%= I18n.t('general.scanned_document')%></th>
        </tr>
      </thead>
      <tbody>
        <% legal_documents.each do |legal_match|%>
        <tr>
          <td><%=  link_to legal_match.id, edit_legal_match_path(legal_match), remote: true %></td>
          <td><%=  link_to legal_match.legal_document.name, legal_document_legal_match_path(legal_match) %></td>
          <td><%=  legal_match.status.present? ? I18n.t("list.#{legal_match.status}") : nil %></td>
          <td><%=  I18n.t("list.#{legal_match.legal_document.document_type}") %></td>
          <td><%=  legal_match.validation_method %></td>
          <td><%=  lumni_date(legal_match.created_at) %></td>
          <td><%=  scanned_document(legal_match) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
	</div>
</div>

<div class="modal fade" id="legal_match_modal_<%= target_application.id %>" tabindex="-1" role="dialog" aria-labelledby="legal_match_modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="legal_match_modalLabel_<%= target_application.id %>"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="legal_match_modal_container_<%= target_application.id %>">
        
      </div>
    </div>
  </div>
</div>
