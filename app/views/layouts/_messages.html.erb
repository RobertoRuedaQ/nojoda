<div id="flash">
	<% flash.each do |name, msg| %>

	<% unless name == 'timedout' %>
		<% name = name=='alert' ? 'danger' : name %>
		<% name = name=='notice' ? 'info' : name %>

		  <% if msg.class == Array %>
		    <% msg.each do |message| %>

				<div class="alert alert-dark-<%= name %> alert-dismissible fade show" role="alert" id="flash_<%= name %>">
				  <%= message %>
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    <span aria-hidden="true">&times;</span>
				  </button>
				</div>

		    <% end %>
		  <% else %>

			<div class="alert alert-dark-<%= name %> alert-dismissible fade show" role="alert" id="flash_<%= name %>">
			  <%= msg %>
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>

		  <% end  #don't forget the extra end %>
		<% end %>
	<% end %>
</div>

