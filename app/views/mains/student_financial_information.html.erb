  <% elsif @student_financial_information_application.present? && @student_financial_information_application.status == 'submitted' %>
    <div class="card-body bg-info text-white text-center">
      <%= I18n.t('application.under_review') %>
    </div>
  <% else %>
    <%= button_to I18n.t('general.new_request'),create_application_student_financial_informations_path, class: 'btn btn-primary' %>
  <% end %>
<% end %>

