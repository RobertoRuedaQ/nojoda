<%= form_title(@batch, I18n.t('mains.new')) %>
<div class="card  mb-3">
    <h5 class="card-header ">
      <div class="d-flex justify-content-between">
          Asignación de AO y SM a estudiantes por lote
      </div>
    </h5>
  <div class="card-body">
    <%= form_for @batch do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label 'Descripción' %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label 'Archivo de lote a relacionar' %>
          <%= f.file_field :relationships_file, class: 'form-control' %>
        </div>
      </div>
    </div>
      
      <div class="form-group">
        <%= f.submit 'Guardar', class: 'btn btn-success lumnisubmit pull-right' %>
      </div>
    <%end%>
  </div>
</div>
