<%= form_tag edit_dashboard_path(params[:id]),method: :get do %>
<div class="row">
		<label class="form-label">Fecha programada para desembolso</label>
	<div class="col-md-3 my-2">
		<label class="form-label">Desde:</label>
		<%= lumni_text_field('projected_disbursements','start_date',{type: 'text',class: 'lumni_date',value: @start_date}) %>
	</div>
	<div class="col-md-3 my-2">
		<label class="form-label">Hasta:</label>
		<%= lumni_text_field('projected_disbursements','end_date',{type: 'text',class: 'lumni_date',value: @end_date}) %>
	</div>
	<div class="col-md-3 my-2 d-flex">
		<%= button_tag 'Buscar', class: 'btn btn-primary align-self-end' %>
	</div>
</div>
<% end %>

<%= createTable(@projected_disbursement,projected_disbursement_template, title: false, new: false).html_safe %>
