<div class="row">
	<div class="col">
		<div class="card">
      <div class="card-body">
        <h4> Editar excepción de salario minimo para pago </h4>
        <hr/>

        <%= form_for(@threshold_exception, url: {controller: 'threshold_exceptions', action: 'update' }, html: {class: 'py-4'}) do |f| %>
          <div class="row">
            <div class="col-md-6">
              <label for="">Ingresa el valor del salario minimo para pago</label>
              <%= lumni_text_field 'threshold_exception','value',{ required: true, field_type: 'currency', value: @threshold_exception.value} %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-4">
              <%= link_to 'Eliminar excepción', isa_threshold_exception_path(@isa, @threshold_exception), class: 'btn btn-danger', method: 'delete', data: { confirm: '¿Seguro que desea eliminar la excepción?', commit: 'Si, eliminar' } %>
            </div>
            <div class="col-md-2">
              <%= button_tag('Actualizar',class: 'btn btn-primary btn-block') %>
            </div>
          </div>

        <% end %>
    	</div>
		</div>
	</div>
</div>