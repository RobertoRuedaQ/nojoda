<div id="edit-origination"></div>
<div class="d-flex justify-content-between">
  <%= form_title(@origination, 'name') %>
  <div>
    <%= link_to I18n.t('general.clone'),clone_origination_origination_path(@origination), class: 'btn btn-primary my-2' %>
  </div>
</div>

<div class="nav-tabs-top">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#origination-tab"><%= Origination.model_name.human(count: 1) %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#student-route-tab"><%= StudentRoute.model_name.human(count: 1) %></a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="origination-tab">
      <%= render 'originations/partial/origination' %>

    </div>
    <div class="tab-pane fade " id="student-route-tab">
    	<div class="card">
    		<div class="card-body py-4">

		    	<% @origination.student_route.each do |student_route| %>
		    		<div class="card my-2 shadow">
		    			<div class="card-body">

  				      <div class="form-group row">
					        <label class="col-form-label col-sm-2 text-sm-right"><%= I18n.t('student_route.' + student_route.scenario) %></label>
					        <div class="col-sm-10">
					          <%= lumni_dropdown_field('student_routes','team_profile_id',{list: student_route_by_action_list(student_route.scenario), value: student_route.team_profile_id, id: student_route.id}) %>
					        </div>
					      </div>

		    			</div>
		    		</div>
		    		
		    	<% end %>


    		</div>
    	</div>


    	
    </div>


  </div>
</div>





