


<div class="card-body pb-2" id="imageEditor" style="display: none;">
	<div class="ui-block">
		<div class="cui">
		  <div class="row">
		    <div class="offset-md-3 col-md-6">

		    <div class="cropper-container">

				<%= image_tag( asset_path("default/avatar.png"), id: "cropper-image", alt: "Picture") %>		    	
		    </div>

		  </div>


		  </div>
		  <div class="row text-center">
		    <div class="cropper-buttons offset-md-3 col-md-6">

		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="zoom" data-option="0.1" data-toggle="cropper-tooltip"  >
		          <span class="ion ion-md-add"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="zoom" data-option="-0.1" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-remove"></span>
		        </button>
		      </div>

		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="move" data-option="-10" data-second-option="0" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-arrow-back"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="move" data-option="10" data-second-option="0" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-arrow-forward"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="move" data-option="0" data-second-option="-10" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-arrow-up"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="move" data-option="0" data-second-option="10" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-arrow-down"></span>
		        </button>
		      </div>

		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="rotate" data-option="-45" data-toggle="cropper-tooltip" >
		            <span class="ion ion-md-refresh"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="rotate" data-option="45" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-refresh scaleX--1"></span>
		        </button>
		      </div>

		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="scaleX" data-option="-1" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-swap"></span>
		        </button>
		        <button type="button" class="btn btn-primary" data-method="scaleY" data-option="-1" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-swap rotate--90"></span>
		        </button>
		      </div>

		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="reset" data-toggle="cropper-tooltip" >
		          <span class="ion ion-md-sync"></span>
		        </button>

		        <label class="btn btn-primary btn-upload" data-toggle="cropper-tooltip" >
		          <input type="file" class="sr-only" id="cropper-inputImage" name="file" accept=".jpg,.jpeg,.png,.gif,.bmp,.tiff">
		          <span class="ion ion-md-cloud-upload"></span>
		        </label>
		      </div>


		    </div>
		  </div>

		  <div class="row my-4 text-center">
		    <div class="cropper-buttons offset-md-3 col-md-6">
		      <div class="btn-group mb-1">
		        <button type="button" class="btn btn-primary" data-method="getCroppedCanvas" data-option="{ &quot;width&quot;: 320, &quot;height&quot;: 320 }" data-toggle="cropper-tooltip" >
		          <%= I18n.t('cropper.crop') %>
		        </button>
		        <button type="button" class="btn btn-secondary"  >
		          Cancel
		        </button>



		      </div>

				</div>
			</div>


		  <!-- Show the cropped image in modal -->
		  <div class="modal fade cropper-cropped" id="cropper-getCroppedCanvasModal" aria-hidden="true" aria-labelledby="cropper-getCroppedCanvasTitle" role="dialog" tabindex="-1">
		    <div class="modal-dialog">
		      <div class="modal-content">
		        <div class="modal-header">
		          <h5 class="modal-title" id="cropper-getCroppedCanvasTitle">Cropped</h5>
		          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		            <span aria-hidden="true">&times;</span>
		          </button>
		        </div>
		        <div class="modal-body ie-mh-1"></div>
		        <%= render 'forms/upload_form' %>
		        <div class="modal-footer">
		          <button type="button" class="btn btn-default" data-dismiss="modal" >Close</button>


		          <div class="cropper-set">

		          	<button type="button" class="btn btn-primary cropper-buttons cropper-set" data-method="avatar" data-toggle="cropper-tooltip" data-dismiss="modal">Set Image</button>

		          </div>
		        </div>
		      </div>
		    </div>
		  </div><!-- /.modal -->

		</div>
	</div>
</div>

<input id="sense" hidden value='<%=form_authenticity_token%>'>
