<div class="mx-2">

<div class="accordion mb-4" id="accordionExample">
  <div class="card">
    <div class="card-header p-0" id="headingOne">
      <div class="d-flex flex-column m-0 p-0">
        <button class="btn btn-primary btn-sm" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <%= I18n.t('general.filters')%>
        </button>
      </div>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">




		<div class="mb-4">
			<%= form_tag filter_students_students_path do %>

				<div class="row">
				  <div class="col-md">

				    <div class="form-group">
						<div class="form-label">
							<label><%= Isa.human_attribute_name('general_status') %></label>
						</div>
						<%= lumni_dropdown_field( 'lumni_filter','general_status',{type: 'multiple_dropdown',value: @current_general_status,list: list_of_translated_items( @general_status_options, 'isa'),placeholder: 'General Status'}) %>
				    </div>

				  </div>
				</div>
				<div class="row">
				  <div class="col-md">

				    <div class="form-group">
							<div class="form-label">
								<label><%= Fund.model_name.human(count: 2) %></label>
							</div>
							<%= lumni_dropdown_field( 'lumni_filter','funds',{type: 'multiple_dropdown',value: @fund_ids,list: list_form_collection(@funds, 'name'),placeholder: 'Filtro de convocatorias'}) %>
				    </div>

				  </div>
				  <div class="col-md">
				    <div class="form-group">
							<div id='funding_opportunity-filter-container'>

								<% if !@funding_opportunity_ids.nil? || !@fund_ids.nil?%>
									<%= render '/forms/filters/conditional_funding_opportunity_field', funding_opportunity_ids: @funding_opportunity_ids, funding_opportunities: @funding_opportunities%>
								<% end %>

							</div>
				    </div>
				  </div>
				</div>
				<div class="row">
					<div class="col text-center">
						<%= button_tag I18n.t('general.send'), class: 'btn btn-primary',data: { disable_with: I18n.t('form.please_wait')} %>
					</div>
				</div>

			<% end %>
		</div>




      </div>
    </div>
  </div>
</div>









</div>


